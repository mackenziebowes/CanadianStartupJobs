{
  "name": "@canadian-startup-jobs/db",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:seed": "bun run src/scripts/seed.ts",
    "db:benchmark": "bun run src/scripts/benchmark-manager.ts",
    "docs": "bun run src/scripts/generate-docs.ts"
  },
  "dependencies": {
    "drizzle-orm": "^0.45.1",
    "drizzle-zod": "^0.8.3",
    "postgres": "^3.4.5",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@types/bun": "^1.3.4",
    "@types/node": "^24.10.1",
    "dotenv": "^17.2.3",
    "drizzle-kit": "^0.30.0",
    "typescript": "^5"
  },
  "peerDependencies": {
    "dotenv": "^17.2.3"
  }
}
